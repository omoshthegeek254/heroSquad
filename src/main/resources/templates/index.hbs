

{{#partial "content"}}

       <div class=" col-md-12 jumbotron text-center">
           <h1>Heros Squad </h1>
       </div>

       <div class="col-md-6">

           <h2> </h2>

           <p> Welcome to Hero Squad , Here you can register </p>


           <h3>Register your heros here</h3>

           <form action="/post-hero" method="post" class="p-2">
               <label for="name">Name</label>
               <input type="text" class="form-control" name="name" placeholder="hero's Name" required>

               <label for="age">Age</label>
               <input type="text" class="form-control" name="age" placeholder="hero's Age" required>

               <label for="name">Superpowers</label>
               <input type="text" class="form-control" name="superPowers" placeholder="hero's superpowers" required>

               <label for="name">Weakness</label>
               <input type="text" class="form-control" name="weakness" placeholder="hero's  weakness" required>

               <button type="submit" class="btn btn-primary">Register</button>

           </form>



           <h3>Set up a hero Squad</h3>

           <h4>Rules</h4>

           <ul>
               <li>A squad has a maximum of 4 superheroes</li>
               <li>A superhero can participate in only one team at  a go </li>
           </ul>

           <form action="/hero-team" method="post" class="p-3">
               <label for="squadName">Squad Name</label>
               <input type="text" class="form-control" name="squadName" placeholder="enter squad name" required>

               <label for="cause">Squad Members</label>
               <select class="form-control" id="inlineFormCustomSelect" name="squadMembers" required>
                   <option disabled >Choose... Squad Members</option>
                   {{#each allHeroes}}
                       <option value="{{name}}">{{id}} . {{name}}</option>
                   {{/each}}

               </select>

               <label for="members">Squad Cause</label>
               <select class="form-control" id="inlineFormCustomSelect" name="squadCause" required>
                   <option >Choose... Combating</option>
                   <option selected value="Gender Based Crimes">Gender Based Crimes</option>
                   <option value="Economic Crimes">Economic Crimes </option>
                   <option value="Evil Villans">Evil Villans</option>
               </select>

               <button type="submit" class="btn btn-primary">Create Squad</button>
           </form>

       </div>

       <div class="col-md-6">
<!--           DISPLAYING HEROES-->
           <h4>List of Heroes</h4>

           {{#if allHeroes}}

               <ol>
                   {{#each allHeroes}}
                       <h4>{{id}}. Name : {{name}}  </h4>
                       <p>Age {{age}}: </p>
                       <p>Superpowers: {{superPowers}}</p>
                       <p>Weakness:  {{weakness}}</p>
                   {{/each}}
               </ol>
           {{else}}
               <p class="text-danger">No Heroes registered yet </p>
           {{/if}}
           <hr>
<!--           displaying squads-->

           <h4>Squads Available</h4>


           {{#if allSquads}}

               <ol>
                   {{#each allSquads}}
                       <h4>{{id}} Squad Name : {{squadName}}  </h4>
                       <p>Squad Members : {{squadMembers}}: </p>
                       <p>Squad Cause:(Fights) {{squadCause}}</p>

                   {{/each}}
               </ol>
           {{else}}
               <p class="text-danger">No Squad registered yet </p>
           {{/if}}





       </div>



{{/partial}}



{{> master.hbs}}